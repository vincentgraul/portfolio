{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "all",
      "automerge": true
    }
  ],
  "schedule": ["before 3am on the first day of the month"],
  "platformAutomerge": true
}
